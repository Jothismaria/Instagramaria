<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidx.constraintlayout.widget.Constrainttools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="136dp"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:padding="16dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp" />
    <!-- android:drawableRight="@drawable/visibility"-->

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="35dp"
        android:background="@layout/grey_border"
        android:text="Log In"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/forgotpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="461dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="-174dp"
        android:text="Forgotten your login details?" />

    <View
        android:id="@+id/footer_line"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="612dp"
        android:layout_marginBottom="50dp"
        android:background="#4444" />

    <TextView
        android:id="@+id/info"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="165dp"
        android:padding="8dp"
        android:text="No of attemp remaining"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/logo" />

    <ProgressBar
        android:id="@+id/loginrequestloadingprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="110dp"
        android:layout_height="92dp"
        android:layout_centerInParent="true" />


</RelativeLayout>