<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tvPost"
            android:layout_width="63dp"
            android:layout_height="53dp"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="2dp"
            android:text="95"

            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvFollower"
            app:layout_constraintEnd_toStartOf="@+id/textPost"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textPost"
            android:layout_width="85dp"
            android:layout_height="58dp"
            android:layout_marginEnd="119dp"
            android:text="Posts"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textFollowers"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFollower"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="73dp"
            android:text="503"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tvFollowing"
            app:layout_constraintStart_toEndOf="@+id/tvPost"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textFollowers"
            android:layout_width="87dp"
            android:layout_height="26dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Followers"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/textFollowing"
            app:layout_constraintStart_toEndOf="@+id/textPost"
            app:layout_constraintTop_toBottomOf="@+id/tvFollower" />

        <TextView
            android:id="@+id/tvFollowing"
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="98dp"
            android:text="55"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvFollower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvFollower" />

        <TextView
            android:id="@+id/textFollowing"
            android:layout_width="141dp"
            android:layout_height="39dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:text="Following"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textFollowers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textFollowers" />

        <TextView
            android:id="@+id/textEditProfile"
            android:layout_width="172dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@layout/grey_border"
            android:text="EditProfile"
            android:onClick="editprofile"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFollowers" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
